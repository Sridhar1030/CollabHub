{
    "name": "backend",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "test:verbose": "jest --verbose",
        "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit",
        "dev": "nodemon server.js",
        "test:load": "artillery run tests/load/load-test.yml",
        "test:load:quick": "artillery run tests/load/quick-test.yml",
        "test:load:stress": "artillery run tests/load/stress-test.yml",
        "test:load:data": "artillery run tests/load/data-volume-test.yml",
        "test:load:report": "artillery run --output results.json tests/load/load-test.yml",
        "test:load:all": "npm run test:load:all:quick && npm run test:load:all:load && npm run test:load:all:stress",
        "test:load:all:quick": "artillery run --output reports/quick-results.json tests/load/quick-test.yml",
        "test:load:all:load": "artillery run --output reports/load-results.json tests/load/load-test.yml",
        "test:load:all:stress": "artillery run --output reports/stress-results.json tests/load/stress-test.yml",
        "test:load:cloud": "artillery run --record --key $ARTILLERY_CLOUD_API_KEY tests/load/load-test.yml",
        "test:load:cloud:all": "npm run test:load:cloud:quick && npm run test:load:cloud:load && npm run test:load:cloud:stress",
        "test:load:cloud:quick": "artillery run --record tests/load/quick-test.yml",
        "test:load:cloud:load": "artillery run --record tests/load/load-test.yml",
        "test:load:cloud:stress": "artillery run --record tests/load/stress-test.yml"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "description": "",
    "dependencies": {
        "axios": "^1.11.0",
        "compression": "^1.8.1",
        "cors": "^2.8.5",
        "express": "^5.1.0",
        "express-rate-limit": "^8.2.1",
        "helmet": "^8.1.0",
        "mongoose": "^8.19.1"
    },
    "devDependencies": {
        "artillery": "^2.0.29",
        "jest": "^29.7.0",
        "supertest": "^6.3.4"
    }
}
